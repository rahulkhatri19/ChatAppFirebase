<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.rahul.chatappfirebase.activity.InvitationActivity">
    <TextView
        android:id="@+id/noUsersText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Invitation found!"
        android:textSize="18sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/usersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextYellow"
        android:cacheColorHint="@android:color/white"
        android:divider="@android:color/white"
        android:entries="@android:color/white"
        android:theme="@android:style/Widget.ListView.White" />
</LinearLayout>
